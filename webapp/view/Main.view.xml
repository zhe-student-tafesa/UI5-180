<mvc:View controllerName="T180.fiorichallenge.controller.Main" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>pageTitle}">
                    <content>
                        <!-- Example text binding from the Asset Review model -->
                        <Text text="{AssetReviewModel>/CurrentDate}" id="exampleText" class="sapUiSmallMargin" />

                        <Text text="Number of Reviews: {/recipient/Length}" id="myText" class="sapUiSmallMargin" />
                        <Table id="ReviewsTable" inset="true">
                            <columns>
                                <Column minScreenWidth="Medium" demandPopin="true" hAlign="Left">
                                    <Text text="AssetName" />
                                </Column>

                                <Column minScreenWidth="Medium" demandPopin="true" hAlign="Right">
                                    <Text text="Suitability" />
                                </Column>


                                <Column minScreenWidth="Medium" demandPopin="true" hAlign="Left">
                                    <Text text="SuitabilityComment" />
                                </Column>

                                <Column minScreenWidth="Medium" demandPopin="true" hAlign="Right">
                                    <Text text="Value" />
                                </Column>

                                <Column minScreenWidth="Medium" demandPopin="true" hAlign="Left">
                                    <Text text="ValueComment" />
                                </Column>
                                <Column minScreenWidth="Medium" demandPopin="true" hAlign="Right">
                                    <Text text="Durability" />
                                </Column>

                                <Column minScreenWidth="Medium" demandPopin="true" hAlign="Left">
                                    <Text text="DurabilityComment" />
                                </Column>

                                <Column minScreenWidth="Medium" demandPopin="true" hAlign="Right">
                                    <Text text="Longevity" />
                                </Column>
                                <Column minScreenWidth="Medium" demandPopin="true" hAlign="Left">
                                    <Text text="LongevityComment" />
                                </Column>

                                <Column minScreenWidth="Medium" demandPopin="true" hAlign="Left">
                                    <Text text="SummaryComments" />
                                </Column>

                                <Column minScreenWidth="Medium" demandPopin="true" hAlign="Left">
                                    <Text text="SubmissionDate" />
                                </Column>
                                <Column minScreenWidth="Medium" demandPopin="true" hAlign="Left">
                                    <Text text="SubmittedBy" />
                                </Column>

                            </columns>
                        </Table>
                        <!-- add  new  review  -->
                         <Input value="{/newReviews/AssetName}" description="" valueLiveUpdate="true" width="60%" />
                        <Label text="Asset Name" />
                        <Input value="{/newReviews/Suitability}" type="Number"  valueLiveUpdate="true" width="60%" />
                        <Label text="Suitability" />
                        <Input value="{/newReviews/SuitabilityComment}" description="" valueLiveUpdate="true" width="60%" />
                        <Label text="SuitabilityComment" />

                        <Input value="{/newReviews/Value}" type="Number"  valueLiveUpdate="true" width="60%" />
                        <Label text="Value" />
                        <Input value="{/newReviews/ValueComment}"  valueLiveUpdate="true" width="60%" />
                        <Label text="ValueComment" />
                        <Input value="{/newReviews/Durability}" type="Number"   valueLiveUpdate="true" width="60%" />
                        <Label text="Durability" />

                        <Input value="{/newReviews/DurabilityComment}" description="" valueLiveUpdate="true" width="60%" />
                        <Label text="DurabilityComment" />
                        <Input value="{/newReviews/Longevity}" type="Number"   valueLiveUpdate="true" width="60%" />
                        <Label text="Longevity" />
                        <Input value="{/newReviews/LongevityComment}" description="" valueLiveUpdate="true" width="60%" />
                        <Label text="LongevityComment" />

                        <Input value="{/newReviews/SummaryComments}" description="" valueLiveUpdate="true" width="60%" />
                        <Label text="SummaryComments" />

                        <Input value="{/newReviews/SubmissionDate}" placeholder="Enter Date(YYYY-MM-DD)" valueLiveUpdate="true" width="60%" />
                        <Label text="SubmissionDate" />
                        <Input value="{/newReviews/SubmittedBy}" description="" valueLiveUpdate="true" width="60%" />
                        <Label text="SubmittedBy" />
                        <Button text="Add Review"  class="myAppAddBtn" type="Accept" press=".onAddReview"    />

                    </content>
                </Page>
            </pages>
        </App>

    </Shell>
</mvc:View>